{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranches": [
    "main"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "pip_requirements"
      ],
      "matchPackageNames": [
        "tomli"
      ],
      "matchPaths": [
        "backend/deps/backend/requirements.config.txt"
      ],
      "matchCurrentVersion": "^={0,2}\\s*2\\.0\\.1$",
      "enabled": false,
      "description": "Ignore tomli updates for the Python < 3.8 entry (pin 2.0.1)."
    }
  ]
}
